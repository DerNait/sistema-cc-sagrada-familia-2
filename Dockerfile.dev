FROM php:8.2-fpm-alpine
WORKDIR /var/www/html

RUN apk add --no-cache bash \
    && apk add --no-cache --virtual .build-deps $PHPIZE_DEPS \
    && apk add --no-cache libpq postgresql-dev libzip-dev icu-dev \
       libpng-dev libjpeg-turbo-dev freetype-dev \
    && docker-php-ext-configure gd --with-freetype --with-jpeg \
    && docker-php-ext-install pdo pdo_pgsql zip bcmath intl gd \
    && pecl install redis \
    && docker-php-ext-enable redis \
    && apk del .build-deps \
    && apk add --no-cache libpng libjpeg-turbo freetype

# Usuario/grupo 'www'
RUN addgroup -g 1000 -S www && adduser -u 1000 -S www -G www

# Carpetas Laravel (nota: si montas volúmenes, se recrean vacías en runtime)
RUN mkdir -p storage/framework/{cache,sessions,views} bootstrap/cache \
    && chown -R www:www storage bootstrap/cache

# PHP dev overrides (OPcache off)
RUN cat > /usr/local/etc/php/conf.d/zz-dev.ini <<'INI'
opcache.enable=0
opcache.validate_timestamps=1
INI

# ⚠️ Pool FPM: que los *workers* corran como 'www'
RUN sed -ri 's/^user\s*=.*/user = www/; s/^group\s*=.*/group = www/' /usr/local/etc/php-fpm.d/www.conf

# Composer
COPY --from=composer:2 /usr/bin/composer /usr/bin/composer

# No pongas USER aquí (dejamos que el maestro FPM sea root)
EXPOSE 9000
CMD ["php-fpm", "-F"]
