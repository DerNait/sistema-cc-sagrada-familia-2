services:
  app:
    build:
      context: .
      dockerfile: Dockerfile
    image: your-namespace/app:latest
    container_name: l_app
    env_file:
      - .env           # cada dev crea su propio .env a partir de .env.example
    depends_on:
      - db
    healthcheck:
      test: ["CMD", "php", "-r", "echo extension_loaded('pdo_pgsql') ? 'OK' : 'NO';"]
      interval: 10s
      timeout: 3s
      retries: 6

  web:
    image: nginx:1.27-alpine
    container_name: l_web
    depends_on:
      - app
    ports:
      - "80:80"
      - "443:443"
    volumes:
      - ./ops/nginx/app.conf:/etc/nginx/conf.d/default.conf:ro
      # Cambiar las rutas de certificados seg√∫n tu server/proyecto
      - /srv/certs/cloudflare.crt:/etc/nginx/ssl/cloudflare.crt:ro
      - /srv/certs/cloudflare.key:/etc/nginx/ssl/cloudflare.key:ro
    volumes_from:
      - app_public:ro

  # Volumen con /public para que Nginx lo lea en prod
  app_public:
    image: busybox
    container_name: l_app_public
    volumes:
      - app_public:/var/www/html/public

  db:
    image: postgres:14
    container_name: pg_database
    environment:
      POSTGRES_DB: ${DB_DATABASE}
      POSTGRES_USER: ${DB_USERNAME}
      POSTGRES_PASSWORD: ${DB_PASSWORD}
    env_file:
      - .env
    volumes:
      - pgdata:/var/lib/postgresql/data

volumes:
  pgdata:
  app_public:
